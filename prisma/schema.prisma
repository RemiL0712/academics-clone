generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  orders    Order[]
}

model Order {
  id        Int      @id @default(autoincrement())
  type      String
  topic     String?
  deadline  DateTime?
  pages     Int
  fileUrl   String?
  total     Float    @default(0)    // ← ДОДАТИ ЦЕ
  status    String   @default("pending")
  details   String?
  createdAt DateTime @default(now())

  user   User @relation(fields: [userId], references: [id])
  userId Int
}

