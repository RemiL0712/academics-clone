generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  orders   Order[]
  address  Address?
}


model Order {
  id        Int      @id @default(autoincrement())
  type      String
  topic     String?
  deadline  DateTime?
  pages     Int
  fileUrl   String?
  total     Float    @default(0)    // ← ДОДАТИ ЦЕ
  status    String   @default("pending")
  details   String?
  createdAt DateTime @default(now())

  user   User @relation(fields: [userId], references: [id])
  userId Int
}

model Address {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @unique

  firstName String
  lastName  String
  company   String?
  country   String
  street1   String
  street2   String?
  city      String
  postcode  String
  phone     String
  email     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

